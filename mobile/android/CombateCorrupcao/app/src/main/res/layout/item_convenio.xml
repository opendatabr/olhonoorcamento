<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/objConvenio"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/divider"
        android:layout_alignStart="@+id/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/secondaryText"
        android:textSize="12sp"
        android:id="@+id/Situacao"
        android:layout_below="@+id/objConvenio"
        android:layout_alignLeft="@+id/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/secondaryText"
        android:textSize="12sp"
        android:id="@+id/valor"
        android:layout_below="@+id/Situacao"
        android:layout_alignLeft="@+id/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@color/secondaryText"
        android:textSize="12sp"
        android:id="@+id/estado_municipio"
        android:layout_below="@+id/valor"
        android:layout_alignLeft="@+id/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ano"
        android:textColor="@color/secondaryText"
        android:textSize="12sp"
        android:layout_marginRight="33dp"

        android:layout_alignTop="@+id/estado_municipio"
        android:layout_alignRight="@+id/divider"
        android:layout_alignEnd="@+id/divider" />

    <View
       android:id="@+id/divider"
        android:layout_marginTop="15dp"
       android:background="@color/dividerColor"
       android:layout_width="match_parent"
       android:layout_height="0.8dp"
        android:layout_below="@+id/estado_municipio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>